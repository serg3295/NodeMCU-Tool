{
    "name": "nodemcu-tool",
    "version": "4.3.0",
    "description": "Command line tool to upload and manage files on your NodeMCU / ESP8266 Module / ESP32 Module.",
    "keywords": [
        "cli",
        "lua",
        "terminal",
        "nodemcu",
        "esp8266",
        "esp32",
        "wifi",
        "serial",
        "upload",
        "embedded"
    ],
    "homepage": "https://github.com/AndiDittrich/NodeMCU-Tool",
    "bugs": "https://github.com/AndiDittrich/NodeMCU-Tool/issues",
    "repository": "AndiDittrich/NodeMCU-Tool",
    "files": [
        "out",
        "prebuilds",
        "CHANGES.md",
        "LICENSE.md",
        "README.md"
    ],
    "main": "./out/nodemcu-tool.js",
    "bin": {
        "nodemcu-tool": "out/nodemcu-tool.js"
    },
    "scripts": {
        "build": "npm run esbuild-base production",
        "build-dev": "npm run esbuild-base",
        "watch": "npm run esbuild-base watch",
        "lint": "eslint lib/ bin/;",
        "esbuild-base": "node esbuild.mjs"
    },
    "engines": {
        "node": ">=18.0"
    },
    "preferGlobal": true,
    "author": "Andi Dittrich (https://andidittrich.de)",
    "license": "MIT",
    "dependencies": {
        "async-magic": "^1.3.0",
        "cli-progress": "^3.1.0",
        "colors": "^1.1.2",
        "commander": "^12.1.0",
        "fs-magic": "^2.1.1",
        "glob": "^10.4.4",
        "is-glob": "^4.0.1",
        "logging-facility": "^2.0.1",
        "luamin": "^1.0.4",
        "prompt": "^1.3.0",
        "serialport": "^12.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^8.57.1",
        "@stylistic/eslint-plugin": "^2.12.0",
        "@types/node": "^18.19.59",
        "esbuild": "^0.24.0",
        "eslint": "^8.57.1",
        "eslint-plugin-n": "^17.15.0",
        "eslint-plugin-promise": "^7.2.1",
        "globals": "^15.13.0"
    }
}
